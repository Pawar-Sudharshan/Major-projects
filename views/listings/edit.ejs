<% layout('layouts/boilerplate') -%>

<body>
  <div class="container py-4 col-md-8 offset-2">
    <h2>Edit Listing</h2>
    <br><br>

    <form action="/listings/<%= list._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listings[title]"
          id="title"
          required
          class="form-control"
          value="<%= list.title %>"
        >
      </div>

      <div class="mb-3">
        <label for="des" class="form-label">Description</label>
        <textarea
          name="listings[des]"
          id="des"
          required
          class="form-control"
        ><%= list.des %></textarea>
      </div>

      <div class="col-md-12 p-0 d-flex gap-4 flex-wrap">
        <div class="mb-3 flex-fill">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listings[price]"
            id="price"
            required
            class="form-control"
            value="<%= list.price %>"
          >
        </div>

        <div class="mb-3 flex-fill">
          <label for="state" class="form-label">State</label>
          <input
            type="text"
            name="listings[state]"
            id="state"
            required
            class="form-control"
            value="<%= list.state %>"
          >
        </div>

        <div class="mb-3 flex-fill">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listings[country]"
            id="country"
            required
            class="form-control"
            value="<%= list.country %>"
          >
        </div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image (Upload a file or paste URL)</label>
        <input
          type="file"
          name="listings[imageFile]"
          id="imageFile"
          class="form-control mb-2"
        >
        <input
          type="url"
          name="listings[img]"
          id="img"
          placeholder="Or paste image URL"
          class="form-control"
          value="<%= list.img %>"
        >
      </div>

      <button type="submit" class="btn btn-danger save-btn">Save</button>
    </form>
  </div>
</body>
