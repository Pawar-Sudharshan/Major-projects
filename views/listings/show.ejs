<% layout('layouts/boilerplate') -%>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card with listing details -->
      <div class="card shadow-lg">
        <!-- Image as card header -->
        <div class="position-relative" style="height: 300px; overflow: hidden;">
          <img src="<%= list.img %>" 
               alt="<%= list.title %>"
               class="w-100 h-100"
               style="object-fit: cover;">
        </div>

        <div class="card-body text-center">
          <!-- Circular image overlay -->
          <div class="mx-auto mb-3" style="margin-top: -60px;">
            <img src="<%= list.img %>" 
                 alt="<%= list.title %>"
                 class="rounded-circle border border-4 border-white bg-white"
                 style="width: 120px; height: 120px; object-fit: cover; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          </div>

          <!-- Title and description -->
          <h3 class="card-title fw-bold mb-2"><%= list.title %></h3>
          <p class="card-text text-muted mb-3"><%= list.des %></p>

          <!-- Price and location -->
          <div class="mb-4">
            <h4 class="text-success fw-bold mb-2">â‚¹ <%= list.price %></h4>
            <p class="text-muted mb-0">
              <i class="fas fa-map-marker-alt"></i>
              <%= list.state %>, <%= list.country %>
            </p>
          </div>

          <!-- Buttons -->
          <div class="d-flex gap-2 justify-content-center">
            <a href="/listings/<%= list._id %>/edit"
               class="btn btn-success btn-lg flex-grow-1">
              <i class="fas fa-edit"></i> Edit
            </a>

            <form action="/listings/<%= list._id %>?_method=DELETE"
                  method="POST"
                  class="flex-grow-1">
              <button type="submit" class="btn btn-danger btn-lg w-100">
                <i class="fas fa-trash"></i> Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>